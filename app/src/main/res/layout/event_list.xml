        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/create_new_event"
            android:background="#0086d0"
            android:text="CREATE NEW EVENT"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/error_layout"
            android:layout_alignParentTop="true"
            android:background="@android:color/black"
            android:layout_marginTop="24dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error"
                android:src="@drawable/icon_error"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error_text"
                android:text="MISADVENTURE"
                android:textSize="12sp"
                android:textColor="#ff0000"
                android:layout_toRightOf="@+id/error"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/error_sub"
                android:text="Your Username or Password do not match"
                android:textSize="12sp"
                android:textColor="@color/trimbe_white"
                android:layout_toRightOf="@+id/error"
                android:layout_below="@+id/error_text"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/err_close"
                android:src="@drawable/icon_close_sm"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="7dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <!-- The navigation drawer left-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|bottom"
        android:background="@drawable/profile_bg_image"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/watchat_version_name"
                android:textColor="@color/trimbe_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/watchat_server"
                android:textColor="@color/trimbe_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <!--<ImageView-->
                <!--android:id="@+id/profile_avatar"-->
                <!--android:layout_width="35dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="14dp"-->
                <!--android:layout_marginTop="64dp"-->
                <!--android:onClick="updateProfileAvatar"-->
                <!--android:src="@drawable/img_i_c_o_n_r_a_i_d" />-->

            <com.example.sharmha.travelerfordestiny.utils.CircularImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/profile_avatar"
                android:src="@drawable/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="81dp"
                app:borderColor="#37646d"
                app:border="true"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_below="@+id/profile_avatar"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/profile_header"
            android:id="@+id/reset"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@color/logout_btn_background"
            android:text="@string/change_password"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/crash_btn"
            android:layout_below="@+id/reset"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/report_crash"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:background="@color/logout_btn_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/logout_btn"
            android:layout_below="@+id/crash_btn"
            android:background="@color/logout_btn_background"
            android:text="@string/logout"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/build_version"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/edit_clip_text"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <!-- The navigation drawer right-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:background="#233a3e"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_logo_badge"
                android:id="@+id/img_logo"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_top_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_logo"
                android:layout_marginTop="14dp"
                android:textColor="@color/trimbe_white"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/group_top_text"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/group_bottom_text"
                android:layout_below="@+id/group_top_text"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#00b6e7"
                android:textSize="12sp"
                android:text="@string/group_other_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/save_grp_layout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/save_group_btn"
                    android:background="#355966"
                    android:text="SAVE GROUP"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#d8d8d8"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/save_group_btn_ready"
                    android:background="@color/app_theme_color"
                    android:text="SAVE GROUP"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/trimbe_white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:visibility="gone"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/group_recycler"
                android:background="@android:color/transparent"
                android:layout_below="@+id/group_bottom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_above="@+id/save_grp_layout">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empty_group_layout"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_nogroups"
            android:id="@+id/img_logo_empty"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="@color/app_theme_color"
            android:id="@+id/empty_grp_text"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_logo_empty"
            android:layout_marginRight="34dp"
            android:layout_marginLeft="34dp"
            android:textColor="@color/trimbe_white"
            android:textSize="20sp"
            android:text="@string/nogroup_text"/>
    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sample_background"
        android:id="@+id/progress_bar_layout"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background_map"
        android:visibility="gone"
        android:id="@+id/verify_fail">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traveller_bdg"
            android:src="@drawable/img_traveler_badge"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY ACCOUNT"
            android:id="@+id/verify_text"
            android:textColor="@color/trimbe_white"
            android:layout_below="@+id/traveller_bdg"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/verify_text"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="#B3000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_text"
                android:layout_marginTop="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/trimbe_white"
                android:text="@string/verify_accnt_toptext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verify_bottom_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/top_text"
                android:textColorLink="@color/app_theme_color"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="24dp"
                android:textColor="@color/trimbe_white"
                android:text="@string/verify_accnt_bottomtext"/>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>