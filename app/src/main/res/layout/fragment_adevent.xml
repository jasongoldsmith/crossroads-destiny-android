<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ad_event"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        app:border="true"
        app:borderColor="#979797"
        app:circularBorderWidth="1dp"
        conversation:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:id="@+id/fragment_adevent_mainlayout"
            android:background="@drawable/imgAdCardRaidGolgoroth">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="11dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/adevent_icon"
                    android:src="@drawable/icon_ghost_default"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_text"
                    android:text="Header missing"
                    android:textSize="20dp"
                    android:textColor="@color/trimbe_white"
                    android:layout_toRightOf="@+id/adevent_icon"
                    android:layout_marginLeft="9dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Subheader missing"
                    android:layout_toRightOf="@+id/adevent_icon"
                    android:layout_below="@+id/header_text"
                    android:layout_marginLeft="9dp"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>