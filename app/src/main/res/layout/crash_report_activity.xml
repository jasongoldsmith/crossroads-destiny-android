<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background_map"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crash_text"
        android:layout_centerHorizontal="true"
        android:text="Crash Report"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/crash_edittext"
        android:layout_margin="20dp"
        android:layout_below="@+id/crash_text"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/crash_edittext"
        android:id="@+id/send_crash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="SEND"
        android:textColor="@android:color/white"
        android:background="@color/app_theme_color" />

</RelativeLayout>