    <!--view pager for tabs-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager_layout"
        android:layout_below="@+id/navi_bottom"
        android:layout_above="@+id/detail_bottom_btn"
        android:layout_marginTop="-48dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/eventdetail_tab_layout"
            app:tabMode="fixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:tabTextColor="#d3d3d3"
            app:tabSelectedTextColor="#ffffff"
            app:tabIndicatorColor="@color/app_theme_color"
            app:tabPaddingStart="20dp"
            app:tabPaddingEnd="0dp"
            android:minHeight="?attr/actionBarSize" />
        <android.support.v4.view.ViewPager
            android:id="@+id/eventdetail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/eventdetail_tab_layout"
            android:background="@android:color/transparent">
        </android.support.v4.view.ViewPager>
        <!--</android.support.v4.widget.SwipeRefreshLayout>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sendmsg_background"
        android:visibility="gone"
        android:background="@drawable/sample_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/send_message_layout"
            android:background="#273a41"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to_layout"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/to"
                    android:text="To:"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textmsg_player"
                    android:layout_toRightOf="@+id/to"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/character_count"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"
                    android:paddingRight="20dp"
                    android:text="80"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_layout"
                android:id="@+id/edittext_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="13dp">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/bubble"-->
                <!--android:src="@drawable/bubble" />-->
                <EditText
                    android:layout_width="260dp"
                    android:layout_height="32dp"
                    android:id="@+id/edittext"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Send message"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="13sp"
                    android:inputType="textMultiLine"
                    android:maxLength="80"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_btn"
                    android:src="@drawable/img_send_btn"
                    android:layout_toRightOf="@+id/edittext"
                    android:layout_marginLeft="6dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sample_background"
        android:id="@+id/progress_bar_eventdetail_layout"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress" />
    </RelativeLayout>

    <include layout="@layout/activity_base" />

