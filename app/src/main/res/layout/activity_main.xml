<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background_login"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/traveller_bdg"
        android:src="@drawable/img_traveler_badge"
        android:layout_marginTop="159dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/register">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99035166"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="SIGN UP"
                android:textSize="11sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sign_in">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99036647"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="LOG IN"
                android:textSize="11sp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_layout"
        android:layout_marginBottom="19dp"
        android:textColor="@color/copyright_text"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:text="@string/copyright_string"/>

</RelativeLayout>
