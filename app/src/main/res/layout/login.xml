<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background_map"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_layout"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/travel_badge_login"
            android:src="@drawable/img_traveler_badge"
            android:layout_above="@+id/login_accnt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_accnt"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="44dp"
            android:text="LOG IN"
            android:textSize="12sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_layout"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_above="@+id/pswd_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_icon"
            android:src="@drawable/img_icon_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/name_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:text="@string/username_text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_name"
            android:hint="@string/username_hint"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:textSize="14sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/name_icon"
            android:layout_below="@+id/name"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/pswd_layout"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#4f000000"
        android:layout_above="@+id/login_btn">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pswrd_icon"
            android:src="@drawable/img_icon_password"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pswd"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:text="PASSWORD"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_pswrd"
            android:hint="@string/password_hint"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:nextFocusDown="@id/login_btn"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:layout_below="@+id/pswd"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_login"
        android:text="Forgot password?"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pswd_layout"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:src="@drawable/img_login_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textColor="@color/copyright_text"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:text="@string/copyright_string"/>

    <include layout="@layout/activity_base" />

</RelativeLayout>