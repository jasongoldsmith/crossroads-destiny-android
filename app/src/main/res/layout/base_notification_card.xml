<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/base_test_card"
    card_view:cardBackgroundColor="@color/app_theme_color"
    card_view:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_bar_base"
        android:background="@color/app_theme_color"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/noti_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_alert"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noti_toptext"
            android:layout_toRightOf="@+id/noti_icon"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:text="YOUR FIRETEAM IS READY"
            android:textColor="#ffc600"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noti_text"
            android:layout_below="@+id/noti_toptext"
            android:layout_toRightOf="@+id/noti_icon"
            android:text="missing event type"
            android:fontFamily="sans-serif"
            android:textColor="@color/trimbe_white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="0dp"
            android:paddingRight="15dp"
            android:textSize="12sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
